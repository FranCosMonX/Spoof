generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// USUARIO
model Usuario {
  id        Int     @default(autoincrement()) @id
  name      String
  email     String @unique
  username  String @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

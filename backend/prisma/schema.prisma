generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// USUARIO
model Usuario {
  id        String    @id @unique @default(uuid())
  nome      String
  usuario   String    @unique
  email     String    @unique
  telefone  String    @unique
  senha     String
  profilePicture String?   // Novo campo para foto de perfil
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  posts          Objects[]
  files          File[]    // Relação com o modelo File
}

model Objects {
  idObjects   String   @id @unique @default(uuid())
  name        String
  description String?
  // Aqui vai ficar as possiveis configurações do objeto, como por exemplo, se ele é um botão, um input, um texto, etc.
  config      Json?
  endPoint    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  Usuario Usuario[]
}

model File {
  id        String   @id @unique @default(uuid())
  url       String
  userId    String
  user      Usuario  @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}